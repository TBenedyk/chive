<h1>Articles</h1>

<section>
  <%= will_paginate @articles %>
  <% @articles.each do |article| %>
    <article>
      <h2><%= link_to article.title, article_path(article) %></h2>
      <address>by <%= article.byline %> on <%= article.published_at %></address>
      <p>
		<%= raw article.summary %>
		<%= link_to 'Read more', article_path(article) %>
	  </p>
    </article>
  <% end %>
</section>
